<UserControl x:Class="Wordle.View.UserControls.Keyboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wordle.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             xmlns:UserControls="clr-namespace:Wordle.View.UserControls"
             >
    <Grid Width="100">
        <Grid.RowDefinitions >
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <UserControls:KeyboardButton Grid.Column="0"   Margin="4" ButtonContent="Q"/>
        <UserControls:KeyboardButton Grid.Column="1"   Margin="4" ButtonContent="W"/>
        <UserControls:KeyboardButton Grid.Column="2"   Margin="4" ButtonContent="E"/>
        <UserControls:KeyboardButton Grid.Column="3"   Margin="4" ButtonContent="R"/>
        <UserControls:KeyboardButton Grid.Column="3"   Margin="4" ButtonContent="T"/>
        <UserControls:KeyboardButton Grid.Column="3"   Margin="4" ButtonContent="Z"/>
        <UserControls:KeyboardButton Grid.Column="3"   Margin="4" ButtonContent="U"/>
        <UserControls:KeyboardButton Grid.Column="3"   Margin="4" ButtonContent="I"/>
        <UserControls:KeyboardButton Grid.Column="3"   Margin="4" ButtonContent="O"/>
        <UserControls:KeyboardButton Grid.Column="3"   Margin="4" ButtonContent="P"/>
    </Grid>
</UserControl>
