<UserControl x:Class="Wordle.View.UserControls.InputBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wordle.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="110" d:DesignWidth="100">
    <Grid>
        <Border  BorderBrush="Black" BorderThickness="1">
            <Viewbox Stretch="UniformToFill">
                <TextBox HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="DimGray" BorderThickness="0"   TextAlignment="Center" FontSize="50" Name="tbxInputBox" />
            </Viewbox>
        </Border>
        
    </Grid>
    
</UserControl>
