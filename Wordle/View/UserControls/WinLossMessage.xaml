<UserControl x:Class="Wordle.View.UserControls.WinLossMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wordle.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock Name="WinMessage" Grid.Column="1" Text="You won!" Background="Green" FontSize="40" FontWeight="Bold" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Panel.ZIndex="1" MinWidth="300" Visibility="Hidden"/>
        <TextBlock Name="LossMessage" Grid.Column="1" Text="You lost" Background="Red" FontSize="40" FontWeight="Bold" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Panel.ZIndex="1" MinWidth="300" Visibility="Hidden"/>
    </Grid>
</UserControl>
