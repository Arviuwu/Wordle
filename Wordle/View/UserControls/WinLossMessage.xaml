<UserControl x:Class="Wordle.View.UserControls.WinLossMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wordle.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="DarkGray">
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="200"/>
            <RowDefinition MaxHeight="200"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Name="WinMessage" Grid.ColumnSpan="2" Text="You won!" Background="Green" FontSize="40" FontWeight="Bold" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Panel.ZIndex="1" MinWidth="300"/>
        <TextBlock Name="LossMessage" Grid.ColumnSpan="2" Text="You lost" Background="Red" FontSize="40" FontWeight="Bold" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Panel.ZIndex="1" MinWidth="300" />
        <Button Name ="btnMenu" Content="Menu" Grid.Column="0" Grid.Row="1"  Click="btnMenu_Click" MaxHeight="100" MaxWidth="200"/>
        <Button Name ="btnPlayAgain" MaxHeight="100" MaxWidth="200" Content="Play Again" Grid.Column="1"  Grid.Row="1" Click="btnPlayAgain_Click"/>
    </Grid>
</UserControl>
