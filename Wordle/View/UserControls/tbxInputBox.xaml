<UserControl x:Class="Wordle.View.UserControls.InputBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wordle.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="110" d:DesignWidth="100"
             Background="DarkGray"
             
             >
    <Grid>
        <Border  BorderBrush="Black" BorderThickness="1">
            
                <TextBox 
                         BorderThickness="0"   
                          
                         
                         HorizontalContentAlignment="Center"
                         VerticalContentAlignment="Center"
                         CharacterCasing="Upper"
                         FontSize="40" 
                         FontWeight="Bold"
                         Name="tbxInputBox" 
                         PreviewKeyDown="tbxInputBox_PreviewKeyDown"
                         TextChanged="tbxInputBox_TextChanged"
                         MaxLength="1"
                         Background="Transparent"
                    
                         />
            
        </Border>
        
    </Grid>
    
</UserControl>
