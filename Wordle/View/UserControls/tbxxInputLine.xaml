<UserControl x:Class="Wordle.View.UserControls.InputLine"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wordle.View.UserControls"
             xmlns:UserControls="clr-namespace:Wordle.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             PreviewKeyDown="UserControl_PreviewKeyDown">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <UserControls:InputBox x:Name="box0"   Grid.Column="0" ColNum="0" Margin="2 7 2 7" />
        <UserControls:InputBox x:Name="box1" Grid.Column="1" ColNum="1" Margin="2 7 2 7"/>
        <UserControls:InputBox x:Name="box2" Grid.Column="2" ColNum="2" Margin="2 7 2 7"/>
        <UserControls:InputBox x:Name="box3"  Grid.Column="3" ColNum="3" Margin="2 7 2 7"/>
        <UserControls:InputBox x:Name="box4" Grid.Column="4" ColNum="4" Margin="2 7 2 7"/>
    </Grid>
</UserControl>
