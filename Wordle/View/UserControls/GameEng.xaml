<UserControl x:Class="Wordle.View.UserControls.GameEng"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wordle.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"      Height="auto" Width="auto"
             xmlns:UserControls="clr-namespace:Wordle.View.UserControls"
             Background="#E4F1F6">
    <Grid>

        <Grid.ColumnDefinitions >
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <UserControls:WinLossMessage Margin="0,100,0,50" Grid.Column="1" HorizontalAlignment="Center" Panel.ZIndex="1"/>

        <Grid Grid.Column="1" Margin="0 10 0 10" HorizontalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <UserControls:InputLine x:Name="Inputline0" Grid.Row="0" RowNum="0"/>
            <UserControls:InputLine x:Name="Inputline1" Grid.Row="1" RowNum="1"/>
            <UserControls:InputLine x:Name="Inputline2" Grid.Row="2" RowNum="2"/>
            <UserControls:InputLine x:Name="Inputline3" Grid.Row="3" RowNum="3"/>
            <UserControls:InputLine x:Name="Inputline4" Grid.Row="4" RowNum="4"/>
      
        </Grid>
        <Grid Grid.Row="2" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <UserControls:KeyboardButton Grid.Column="0"  ButtonContent="Q"/>
            <UserControls:KeyboardButton Grid.Column="1"    ButtonContent="W"/>
            <UserControls:KeyboardButton Grid.Column="2"    ButtonContent="E"/>
            <UserControls:KeyboardButton Grid.Column="3"   ButtonContent="R"/>
            <UserControls:KeyboardButton Grid.Column="4"   ButtonContent="T"/>
            <UserControls:KeyboardButton Grid.Column="5"    ButtonContent="Z"/>
            <UserControls:KeyboardButton Grid.Column="6"    ButtonContent="U"/>
            <UserControls:KeyboardButton Grid.Column="7"    ButtonContent="I"/>
            <UserControls:KeyboardButton Grid.Column="8"    ButtonContent="O"/>
            <UserControls:KeyboardButton Grid.Column="9"    ButtonContent="P"/>
            <UserControls:KeyboardButton Grid.Column="0" Grid.Row="1" ButtonContent="A"/>
            <UserControls:KeyboardButton Grid.Column="1" Grid.Row="1" ButtonContent="S"/>
            <UserControls:KeyboardButton Grid.Column="2" Grid.Row="1" ButtonContent="D"/>
            <UserControls:KeyboardButton Grid.Column="3" Grid.Row="1" ButtonContent="F"/>
            <UserControls:KeyboardButton Grid.Column="4" Grid.Row="1" ButtonContent="G"/>
            <UserControls:KeyboardButton Grid.Column="5" Grid.Row="1" ButtonContent="H"/>
            <UserControls:KeyboardButton Grid.Column="6" Grid.Row="1" ButtonContent="J"/>
            <UserControls:KeyboardButton Grid.Column="7" Grid.Row="1" ButtonContent="K"/>
            <UserControls:KeyboardButton Grid.Column="8" Grid.Row="1" ButtonContent="L"/>
            <UserControls:KeyboardButton Grid.Column="1" Grid.Row="2" ButtonContent="Y"/>
            <UserControls:KeyboardButton Grid.Column="2" Grid.Row="2" ButtonContent="X"/>
            <UserControls:KeyboardButton Grid.Column="3" Grid.Row="2" ButtonContent="C"/>
            <UserControls:KeyboardButton Grid.Column="4" Grid.Row="2" ButtonContent="V"/>
            <UserControls:KeyboardButton Grid.Column="5" Grid.Row="2" ButtonContent="B"/>
            <UserControls:KeyboardButton Grid.Column="6" Grid.Row="2" ButtonContent="N"/>
            <UserControls:KeyboardButton Grid.Column="7" Grid.Row="2" ButtonContent="M"/>

        </Grid>
    </Grid>
</UserControl>
