<UserControl x:Class="Wordle.View.UserControls.Keyboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wordle.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" Content="Q" FontSize="40" FontWeight="Bold"/>
        <Button Grid.Column="1" Content="W" FontSize="40" FontWeight="Bold"/>
        <Button Grid.Column="2" Content="E" FontSize="40" FontWeight="Bold"/>
        <Button Grid.Column="3" Content="R" FontSize="40" FontWeight="Bold"/>
        <Button Grid.Column="4" Content="T" FontSize="40" FontWeight="Bold"/>
        <Button Grid.Column="5" Content="Z" FontSize="40" FontWeight="Bold"/>
        <Button Grid.Column="6" Content="U" FontSize="40" FontWeight="Bold"/>
        <Button Grid.Column="7" Content="I" FontSize="40" FontWeight="Bold"/>
        <Button Grid.Column="8" Content="O" FontSize="40" FontWeight="Bold"/>
        <Button Grid.Column="9" Content="P" FontSize="40" FontWeight="Bold"/>
        <Button Grid.Column="0" Grid.Row="1" Content="A" FontSize="40" FontWeight="Bold"/>
        <Button Grid.Column="1" Grid.Row="1" Content="S" FontSize="40" FontWeight="Bold"/>
        <Button Grid.Column="2" Grid.Row="1" Content="D" FontSize="40" FontWeight="Bold"/>
        <Button Grid.Column="3" Grid.Row="1" Content="F" FontSize="40" FontWeight="Bold"/>
        <Button Grid.Column="4" Grid.Row="1" Content="G" FontSize="40" FontWeight="Bold"/>
        <Button Grid.Column="5" Grid.Row="1" Content="H" FontSize="40" FontWeight="Bold"/>
        <Button Grid.Column="6" Grid.Row="1" Content="J" FontSize="40" FontWeight="Bold"/>
        <Button Grid.Column="6" Grid.Row="1" Content="K" FontSize="40" FontWeight="Bold"/>
        <Button Grid.Column="6" Grid.Row="1" Content="Y" FontSize="40" FontWeight="Bold"/>
        <Button Grid.Column="0" Grid.Row="2" Content="X" FontSize="40" FontWeight="Bold"/>
        <Button Grid.Column="1" Grid.Row="2" Content="C" FontSize="40" FontWeight="Bold"/>
        <Button Grid.Column="2" Grid.Row="2" Content="V" FontSize="40" FontWeight="Bold"/>
        <Button Grid.Column="3" Grid.Row="2" Content="B" FontSize="40" FontWeight="Bold"/>
        <Button Grid.Column="4" Grid.Row="2" Content="N" FontSize="40" FontWeight="Bold"/>
        <Button Grid.Column="5" Grid.Row="2" Content="M" FontSize="40" FontWeight="Bold"/>
        
    </Grid>
</UserControl>
