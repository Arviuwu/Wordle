
    <Window x:Class="Wordle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wordle"
        xmlns:UserControls="clr-namespace:Wordle.View.UserControls"
       
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid HorizontalAlignment="Stretch">
        
        <Grid.ColumnDefinitions >
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="30*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1" Margin="0 10 0 10" HorizontalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
             
            </Grid.RowDefinitions>
            <UserControls:InputLine Grid.Row="0" RowNum="0"/>
            <UserControls:InputLine Grid.Row="1" RowNum="1"/>
            <UserControls:InputLine Grid.Row="2" RowNum="2"/>
            <UserControls:InputLine Grid.Row="3" RowNum="3"/>
            <UserControls:InputLine Grid.Row="4" RowNum="4"/>
        </Grid>
        
    </Grid>
</Window>
